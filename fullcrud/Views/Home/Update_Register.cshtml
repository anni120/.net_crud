@model fullcrud.Models.Registration
@{
    ViewBag.Title = "Update_Register";
    Layout = "~/Views/Shared/GeneralMaster.cshtml";
}

<h2>Update_Register</h2>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class=" container-fluid">
    <div class=" row">
        <div class=" col-3"></div>
        <div class=" col-6">
            <h4>Registration Panel Here !</h4>
            <hr />
            @using (Html.BeginForm("Update_Register", "Home", FormMethod.Post))
            {
                <h3>@ViewBag.msg</h3>
    <div class=" row">
        <div class="col-6">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })




            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", readOnly = "true" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })



            @Html.LabelFor(model => model.Mobile)
            @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })



            @Html.LabelFor(model => model.DOB)
            @Html.TextBoxFor(model => model.DOB, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })


            @Html.LabelFor(model => model.Address)
            @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })



            @Html.LabelFor(model => model.Adhar_Number)
            @Html.TextBoxFor(model => model.Adhar_Number, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Adhar_Number, "", new { @class = "text-danger" })



            @Html.LabelFor(model => model.Pan_Number)
            @Html.TextBoxFor(model => model.Pan_Number, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Pan_Number, "", new { @class = "text-danger" })
        </div>
        <div class="col-6">

            <div>
                <img src="~/Content/Reg_img/@Model.file" class="form-control img-thumbnail mb-2" style=" max-height: 200px;" alt="Image">

            </div>

            @Html.LabelFor(model => model.Password)
            @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

            
            @Html.LabelFor(model => model.Pic)
            @Html.TextBoxFor(model => model.Pic, new { @class = "form-control",type="file" })
            @Html.ValidationMessageFor(model => model.Pic, "", new { @class = "text-danger" })

        </div>


    </div>

                <br />
                <input type="submit" class="form-control btn btn-info" value="Update Now " />

            }
        </div>

    </div>
</div>


